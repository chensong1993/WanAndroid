<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_article_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ImageView-->
    <!--android:id="@+id/iv_news_detail_pic"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_alignParentRight="true" />-->

    <RelativeLayout
        android:id="@+id/item_main_rl"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_news_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingRight="100dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                tools:text="证监会反馈：正积极研究三类股东适格性问题" />

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/tv_news_detail_title"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_author"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_author"
            android:paddingBottom="12dp"
            android:paddingTop="6dp"
            android:textColor="@color/hui2"
            android:textSize="13dp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_collect"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:paddingBottom="12dp"-->
            <!--android:paddingTop="6dp"-->
            <!--android:text="关注"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="13dp" />-->

    </RelativeLayout>


</RelativeLayout>